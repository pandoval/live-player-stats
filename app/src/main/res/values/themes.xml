<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LivePlayerStats" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/almost_black</item>
        <item name="colorPrimaryVariant">@color/almost_black</item>
        <item name="colorOnPrimary">@color/almost_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorSecondaryVariant">@color/almost_black</item>
        <item name="colorOnSecondary">@color/almost_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/text_gray</item>
        <item name="android:navigationBarColor">@color/almost_black</item>
        <item name="android:windowBackground">@color/darkest_gray</item>
        <item name="android:actionMenuTextColor">@color/text_gray</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0%</item>
    </style>

    <style name="boxScoreHeaderTV">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/stat_text_size</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="boxScoreFragmentHeaderTV">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/box_score_text_size</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="boxScoresValueTV">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/stat_text_size</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="Theme.LivePlayerStats.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LivePlayerStats.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LivePlayerStats.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="summaryTableValue">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/summary_table_text_size</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="summaryTableHeader">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/summary_table_text_size</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="summaryTeamStatsLabel">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/summary_team_stats_text_size</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="summaryTeamStatsValue">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/summary_team_stats_text_size</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

</resources>